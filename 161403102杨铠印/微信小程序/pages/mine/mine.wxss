}

.userinfo {
  text-align: center;
  padding: 50rpx 0;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.nickname {
  margin-top: 10px;
}

.zan-panel view, .zan-panel text {
  font-size: 14px;
}

.order_icons {
  display: flex;
  justify-content: space-around;
}

.icon {
  display: flex;
  flex-direction: column;
  padding: 0 15px;
}

.icon i {
  color: #666;
  font-size: 35px;
  text-align: center;
}

.icon text {
  font-size: 12px;
  color: #666;
  text-align: center;
}

.order_item {
  position: relative;
}

.my-badge {
  top: 0;
  right: 0;
  font-size: 10px !important;
}