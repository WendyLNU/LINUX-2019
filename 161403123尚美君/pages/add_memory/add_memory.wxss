.background-color {
  background: #f5f5f5;
  min-height: 100vh;
}

.page-container {
  padding: 30rpx;
  padding-top:  10rpx;
}

.header {
  display: flex;
  margin-top: 20rpx;
  position: relative;
}

.text-left {
  font-size: 28rpx;
  color: #bbb;
}

/* Components/edit-note/edit-note.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
}

.hr {
  margin-top: 30rpx;
  margin-bottom: 0rpx;
  border-bottom: #ccc solid 2rpx;
}

.plus-sign, .memory-plus-sign {
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 14px;
  color: white;
  font-weight: bold;
  background-color: #ddd;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  border-radius: 5px;
}

.memory-plus-sign {
  font-size: 14px;
  border-radius: 0;
  width:70px;
  height: 20px;
  color: #ccc;
  border-bottom: #ccc solid 1px;
  background-color:transparent;
  line-height: 30rpx;
}

.content {
  position: relative;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  height: 250rpx;
  font-size: 26rpx;
}

.content textarea {
  height: 100%;
  width: 560rpx;
}

.content image {
  height: 100%;
  width: 560rpx;
}

.title-content {
  position: relative;
  background: white;
  padding: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  height: 80rpx;
}

.title-content input {
  height: 80rpx;
  width: 560rpx;
  background: white;
  font-size: 28rpx;
  line-height: 80rpx;
  font-weight: bold;
}

.remove-button {
  position: absolute;
  right: 8rpx;
  top: 0rpx;
  color: #ccc;
  font-size: 32rpx;
  height: 44rpx;
  width: 44rpx;
  text-align: center;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.page-title {
  margin-top: 30rpx;
  height: 36rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.title-input {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 32rpx;
}

.memory {
  position: relative;
  margin-top: 20rpx;
  background: #eee;
  border: #ddd solid 1px;
  border-radius: 30rpx;
  padding: 20rpx;
}


.text-right {
  font-size: 24rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  padding: 10rpx;
  background: #6cb8ff;
  border-radius: 16rpx;
  cursor: pointer;
  margin-right: 4rpx;
  margin-left: 4rpx;
  color: #fff;
}
.text-button {
  font-size: 24rpx;
  text-align: center;
  margin: auto;
  padding: 10rpx;
  width: 250rpx;
  background: #6cb8ff;
  border-radius: 16rpx;
  cursor: pointer;
  color: #fff;
}

.library-name {
  color: #8dcbff;
  padding-bottom: 4rpx;
  border-bottom: #8dcbff 3rpx solid;
  margin-right: 4rpx;
  margin-left: 4rpx;
  font-size: 28rpx;
  max-width: 300rpx;
}


