.layout {
  position: fixed;
  top: 0px;
  z-index: 999999999;
  background: rgba(0, 0, 0, 0.5);
  height: 100vh;
  width: 100%;
}
.hidden{
  display: none;
}
.window-warn, .window-primary, .window-input {
  position: absolute;
  width: 600rpx;
  left: 75rpx;
  top: 100rpx;
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}

.window-warn {
  height: 300rpx;
}

.window-primary {
  height: 350rpx;
}

.window-input {
  height: 400rpx;
}

.window-title {
  position: absolute;
  top: 50rpx;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: 800;
}

.window-input .window-title {
  color: #666;
}

.window-warn .window-title {
  color: red;
}

.window-content {
  position: absolute;
  width: 100%;
  text-align: center;
}

.window-warn .window-content {
  font-size: 28rpx;
  top: 128rpx;
  color: #666;
}

.window-primary .window-content {
  font-size: 32rpx;
  top: 120rpx;
  color: #666;
}

.window-input .window-content {
  top: 120rpx;
  font-size: 24rpx;
  color: #aaa;
}

.window-primary .text-input, .window-warn .text-input {
  display: none;
}

.text-input {
  position: absolute;
  top: 190rpx;
  width: 500rpx;
  height: 80rpx;
  left: 50rpx;
  text-align: center;
  color: #aaa;
  border-radius: 10rpx;
  background: #eee;
}

.window-input .text-input input {
  display: block;
  width: 480rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 10rpx;
  color: #333;
  text-align: center;
}

.window-buttons {
  display: flex;
  position: relative;
  width: 100%;
  height: 80rpx;
}

.window-warn .window-buttons {
  border-top: solid #ccc 2rpx;
  top: 225rpx;
}

.window-primary .window-buttons {
  top: 225rpx;
}

.window-input .window-buttons {
  border-top: solid #ccc 2rpx;
  top: 325rpx;
}

.window-buttons view {
  text-align: center;
  border-style: hidden;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 28rpx;
  outline: none;
  padding: 14rpx;
  width: 50%;
}

.window-warn .window-buttons view, .window-input .window-buttons view {
  border-radius: 0;
}

.button-yes {
  background: #6cb8ff;
  color: white;
}

.window-primary .button-yes {
  border-radius: 30rpx;
  margin: 0 auto;
}

.button-no {
  background: #fff;
}

.window-primary .button-no {
  display: none;
}
