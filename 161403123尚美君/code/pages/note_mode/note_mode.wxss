/* pages/view_note/view_note.wxss */

/* Components/edit-note/edit-note.wxss */

.content {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 150rpx;
}

.paragraph {
  line-height: 1.5;
  word-break: break-all;
  padding-left: 20rpx;
  padding-right: 10rpx;
}

.paragraph .title {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  width: 670rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.paragraph .body {
  margin-bottom: 20rpx;
  font-weight: normal;
  font-size: 28rpx;
  width: 670rpx;
}

.hidden {
  display: none;
}

.page-title {
  margin-top: 30rpx;
  height: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.title-input {
  width: 100%;
  height: 100%;
  display: block;
  font-size: 45rpx;
  font-weight: bold;
  text-align: center;
  line-height: 60rpx;
}

.clue {
  padding: 20rpx;
  text-align: left;
  font-size: 34rpx;
  font-weight: bold;
  max-height: 360rpx;
}

.saveTo {
  text-align: right;
  font-size: 24rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.submit {
  width: 100%;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
  border-radius: 0;
  padding: 5px;
  color: white;
  background-color: #2fa0ff;
}

.paragraph .body {
  margin-bottom: 20rpx;
  font-weight: normal;
  font-size: 28rpx;
  width: 670rpx;
}

.paragraph image {
  width: 670rpx;
}

.list-header {
  position: relative;
  font-size: 28rpx;
  color: #bbb;
  padding: 10rpx;
}

.text-right {
  font-size: 24rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  padding: 10rpx;
  background: #6cb8ff;
  border-radius: 16rpx;
  cursor: pointer;
  margin-right: 4rpx;
  margin-left: 4rpx;
  color: #fff;
}

.hr {
  height: 12rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  background: -webkit-linear-gradient(180deg, #e3f0ff, #c9e2ff);
  background: -moz-linear-gradient(180deg, #e3f0ff, #c9e2ff);
  background: -o-linear-gradient(180deg, #e3f0ff, #c9e2ff);
  background: linear-gradient(180deg, #e3f0ff, #c9e2ff);
}

.memory {
  position: relative;
}
.memory .triangle{
  position: relative;
  top:56rpx;
  left: -10rpx;
  width: 0;
  height: 0;
}
.memory .triangle.fold{
  border-top: 10rpx solid transparent;
  border-left: 20rpx solid red;
  border-bottom: 10rpx solid transparent;
}
.memory .triangle.open{
  border-left: 10rpx solid transparent;
  border-top: 20rpx solid red;
  border-right: 10rpx solid transparent;
}

.not-exist-tip{
  text-align: center;
  font-size: 28rpx;
  color: #aaa;
  padding: 30rpx;
}
.sub-library{
  position: relative;
  font-size: 28rpx;
  /* padding: 10rpx 20rpx; */
  text-align: center;
  border-bottom: solid #ccc 1px;
  margin-bottom: 16rpx;
  color: #ccc;
}
.library-name{
  color: #6cb8ff;
   font-size: 32rpx;
  text-align: center;
  padding: 10rpx;
}