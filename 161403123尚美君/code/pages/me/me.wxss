.me-body{
  padding: 30rpx;
  padding-bottom: 10rpx;
  background: #f5f5f5;
  overflow: hidden;
}

.me-info{
  height: 600rpx;
  background: #f5f5f5;
}

.option-list{
  margin-left: -30rpx;
  margin-right: -30rpx;
  margin-top: 140px;
}

.background{
  margin-top: -40%;
  margin-left: -25%;
  border-radius: 50%;
  width: 150%;
  height: 120%;
  background: #2fa0ff
}

.info-panel{
  width: 95%;
  margin: auto;
  margin-top: -500rpx;
  border-radius: 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 10rpx 24rpx 0px #cacaca;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
  overflow: hidden;
}

.portrait{
  width: 144rpx;
  height: 144rpx;
  margin: auto;
  border-radius: 50%;
  border: #cbc1ff 10rpx solid;
}

.name{
  margin: auto;
  padding-top: 16rpx;
  text-align: center;
  padding-bottom: 4rpx;
  font-size: 40rpx;
  height: 100rpx;
  line-height: 60rpx;
}

.coin{
  margin: auto;
  text-align: center;
  color: #aaa;
  font-size: 26rpx;
  padding-bottom: 20rpx;
}

.options{
  height: 160rpx;
  padding-top: 30rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
}

.top-option{
  text-align: center;
  float: left;
  width: 33%;
  color: #999;
  font-size: 24rpx;
  line-height: 50rpx
}

.option-icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.icon-left{
  width: 100rpx;
  margin-top: 26rpx;
  height: 4rpx;
  float: left;
  text-align: center;
}

.icon-right{
  width: 100rpx;
  margin-top: 26rpx;
  height: 54rpx;
  float: right;
  text-align: center;
}

.text{
  width: 200rpx;
  line-height: 100rpx;
  margin-left: 10rpx;
  height: 100rpx;
  float: left;
  text-align: left;
  font-size: 32rpx;
  color: #555;
}

.option-separator{
  height: 10rpx;
  background-color: #f7f7f7;
}

.head-photo{
  display: block;
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  overflow: hidden;
}

.optionlist-icon{
  width: 50rpx;
  height: 50rpx;
}

.bottom-option{
  height: 100rpx;
  background: #fff;
  padding-left: 40rpx;
  padding-right: 40rpx;
} 

.info-panel .right{
  color: #ccc;
  font-size: 28rpx;
}

