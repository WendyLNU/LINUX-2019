image {
  width: 100%;
  height: 100%;
}

.content {
  padding: 30rpx;
  padding-top: 120rpx;
  min-height: 100vh;
  background: #eee;
}

.list {
  padding-bottom: 220rpx;
  display: block;
  overflow: scroll;
  margin-top: 20rpx;
}

.item {
  position: relative;
  height: 100rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.item-icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.item-text {
  margin-left: 50px;
  font-size: 26rpx;
  color: #555;
  margin-top: 18rpx;
}

.item-text text {
  overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap; 
  line-height: 35rpx;
  display: block;
  width: 340rpx;
}

.item-text .info {
  color: #bbb;
  font-size: 22rpx;
}

.item-button {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 25rpx;
  right: 20px;
}

.item-button image {
  height: 100%;
  width: 100%;
}

.choose {
  background: #71ff71;
}

.hr {
  height: 12rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  background: -webkit-linear-gradient(180deg, #e3f0ff, #c9e2ff);
  background: -moz-linear-gradient(180deg, #e3f0ff, #c9e2ff);
  background: -o-linear-gradient(180deg, #e3f0ff, #c9e2ff);
  background: linear-gradient(180deg, #e3f0ff, #c9e2ff);
}

.list-header {
  position: relative;
  font-size: 28rpx;
  color: #bbb;
  padding: 10rpx;
}

.now {
  color: #8dcbff;
}

.text-right {
  font-size: 24rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  padding: 10rpx;
  background: #6cb8ff;
  border-radius: 16rpx;
  cursor: pointer;
  margin-right: 4rpx;
  margin-left: 4rpx;
  color: #fff;
}

.submit {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
}

.submit button {
  background: #6cb8ff;
  color: #fff;
  display: block;
  border: 0px;
  border-radius: 30rpx;
  margin: 0px auto;
  width: 200rpx;
  text-align: center;
  font-size: 28rpx;
}

.confirm, .plus {
  width: 20px;
  height: 20px;
  padding: 10px;
  border-radius: 50%;
  position: fixed;
  bottom: 45px;
  left: 50%;
  margin-left: -20px;
  background: #6cb8ff;
}

.plus .row {
  width: 20px;
  height: 4px;
  background: #fff;
  position: absolute;
  top: 18px;
}

.plus .column {
  width: 4px;
  height: 20px;
  background: #fff;
  position: absolute;
  left: 18px;
}

.confirm {
  width: 80px;
  padding: 10px;
  border-radius: 15px;
  left: 50%;
  margin-left: -50px;
  color: #fff;
  text-align: center;
  line-height: 20px;
  background: #6cb8ff;
}

.disable {
  background: #ddf;
}

.item-button-box {
  width: 120rpx;
  height: 100rpx;
  position: absolute;
  top: 0rpx;
  right: 0px;
}
