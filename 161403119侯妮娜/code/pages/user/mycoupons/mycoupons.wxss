
.body {
  margin: 10px 0;
  background-color: #f6f8f9;
  box-shadow: 5px 0 #f7f7f7;
  font-size: 14px;
  font-family: 'microsoft yahei',Verdana,Arial,Helvetica,sans-serif;
}
.item{display:flex; justify-content:space-around;}
.item .i_left{margin:0 0 0 5%;width:90%;}
.item .iaddr_right{margin:3% 0;width:5%;}
.i_img{width:20px;height: 20px;}
.item .i_right{margin:2% 0;width:5%;}
.con{flex: 1; padding: 0 10px 0 0;border-bottom: 10rpx solid #fff;}
.ft{font-size: 18px;color:cornflowerblue;}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.addr_box{height:300px;width:100%;background:#eee;position:absolute;bottom:0; opacity: 0.7; }
.addr_box_add{position:absolute;bottom:2px;border-top:1px solid #000;width:100%;padding-left:35%;font-size: 18px;
  font-family: 'microsoft yahei',Verdana,Arial,Helvetica,sans-serif;}
.addr_head{display: flex;border-bottom:1px solid #000;height: 40px;}
.addr_head_cancel{font-size: 14px;margin:15px 5px;}
.addr_head_title{font-size: 18px;margin:15px 35%;}
.addr_body{display: flex;border-bottom:1px dashed #000;margin-top:15px;}
.addr_body_edit{width:9%;padding:10px;font-size:14px;}
.addr_body_my{width:75%;}
.addr_body_my_det{font-size:16px; font-family: 'microsoft yahei',Verdana,Arial,Helvetica,sans-serif;}
.addr_body_sel{padding-top:15px;}

